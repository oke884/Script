local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create screen GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FakeLoadingScreen"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Create background
local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)
background.BackgroundColor3 = Color3.fromRGB(34, 139, 34)
background.Parent = screenGui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.2, 0)
title.Position = UDim2.new(0, 0, 0.1, 0)
title.BackgroundTransparency = 1
title.Text = "ðŸŒ± Grow a Garden"
title.Font = Enum.Font.FredokaOne
title.TextSize = 48
title.TextColor3 = Color3.new(1, 1, 1)
title.Parent = background

-- Loading bar background
local loadingBarBack = Instance.new("Frame")
loadingBarBack.Position = UDim2.new(0.2, 0, 0.7, 0)
loadingBarBack.Size = UDim2.new(0.6, 0, 0.05, 0)
loadingBarBack.BackgroundColor3 = Color3.fromRGB(200, 255, 200)
loadingBarBack.BorderSizePixel = 0
loadingBarBack.Parent = background

-- Loading bar fill
local loadingBarFill = Instance.new("Frame")
loadingBarFill.Size = UDim2.new(0, 0, 1, 0)
loadingBarFill.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
loadingBarFill.BorderSizePixel = 0
loadingBarFill.Parent = loadingBarBack

-- Percentage label
local percentLabel = Instance.new("TextLabel")
percentLabel.Size = UDim2.new(1, 0, 0.1, 0)
percentLabel.Position = UDim2.new(0, 0, 0.8, 0)
percentLabel.BackgroundTransparency = 1
percentLabel.Text = "Loading... 0%"
percentLabel.Font = Enum.Font.Gotham
percentLabel.TextSize = 24
percentLabel.TextColor3 = Color3.new(1, 1, 1)
percentLabel.Parent = background

-- Simulate slow "never-ending" loading
local progress = 0
while progress < 97 do -- Never hits 100%
	progress += math.random(1, 2) / 10 -- very slow increase
	loadingBarFill.Size = UDim2.new(progress / 100, 0, 1, 0)
	percentLabel.Text = "Loading... " .. math.floor(progress) .. "%"
	task.wait(0.3 + math.random() * 0.3) -- random delay
end

-- Optional: You can keep it looping or leave it stuck at 97%
percentLabel.Text = "Loading... 97%"
loadingBarFill.Size = UDim2.new(0.97, 0, 1, 0)
